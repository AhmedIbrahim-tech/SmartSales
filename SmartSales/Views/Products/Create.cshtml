@model Product

@{
    ViewData["Title"] = "إضافة المنتج";
}




<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">إضافة منتج جديد</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form asp-action="Create" enctype="multipart/form-data">
                            <div class="text-danger"></div>

                            <div class="row">
                                <div class="form-group col-sm-6">
                                    <div class="form-group">
                                        <div class="col col-sm-12">
                                            <label class="control-label" style="font-size:large">الباركود</label>
                                        </div>
                                        <div class="col col-sm-10">
                                            <input asp-for="Product_Barcode" id="ProBarcode" class="form-control" placeholder="" aria-label="" aria-describedby="basic-addon1" required>
                                        </div>
                                        <div class="col col-sm-2">
                                            <a class="btn btn-danger" onclick="GenerateRandomBarcode();"><i class="fa fa-codepen"></i></a>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label" style="font-size:large">إسم المنتج</label>
                                        <input asp-for="Product_Name" class="form-control" required />
                                    </div>
                                </div>

                            </div>




                            <div class="row">
                                <div class="form-group col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label" style="font-size:large">الصنف</label>
                                        <select class="form-control" required asp-items="ViewBag.Category_ID" asp-for="Category_ID">
                                            <option value=""></option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label" style="font-size:large">المخزن</label>
                                        <select class="form-control" required asp-items="ViewBag.Stock_ID" asp-for="Stock_ID">
                                            <option value=""></option>
                                        </select>
                                    </div>
                                </div>

                            </div>



                            <div class="row">
                                <div class="form-group col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label" style="font-size:large">سعر الشراء</label>
                                        <input asp-for="Product_BuyPrice" type="number" class="form-control" required />
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label" style="font-size:large">سعر البيع</label>
                                        <input asp-for="Product_SellPrice" type="number" class="form-control" required />
                                    </div>
                                </div>

                            </div>


                            <div class="row">
                                <div class="form-group col-sm-3">
                                    <div class="form-group">
                                        <label class="control-label" style="font-size:large">الكمية</label>
                                        <input asp-for="Product_Quantity" class="form-control" value="0" />
                                    </div>
                                </div>
                                <div class="form-group col-sm-3">
                                    <div class="form-group">
                                        <label class="control-label" style="font-size:large">حد الطلب</label>
                                        <input asp-for="Limited_Number" class="form-control" value="0" />
                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group">
                                        <label class="control-label" style="font-size:large">تاريخ الإضافة</label>
                                        <input asp-for="Product_Date" type="date" id="dateof" class="form-control" required />
                                    </div>
                                </div>

                            </div>


                            <div class="form-group">
                                <label class="control-label" style="font-size:large">وصف المنتج</label>
                                <textarea asp-for="Product_Description" style="resize:block; max-height:100px" class="form-control"></textarea>
                                <span asp-validation-for="Product_Description" class="text-danger"></span>
                            </div>




                            <div class="form-group">
                                <input type="submit" value="إضافة" class="btn btn-primary" style="font-size:large;" />
                                <a value="إدارة المنتجات" class="btn btn-success" style="font-size:large;">إدارة المنتجات</a>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script>
    window.onload = function WindowLoad(event) {
        document.getElementById("dateof").valueAsDate = new Date();
    }

    function GenerateRandomBarcode() {
        var eightdigitrandom = Math.floor(10000000 + Math.random() * 90000000);
        document.getElementById("ProBarcode").value = eightdigitrandom;
    }

</script>

}
