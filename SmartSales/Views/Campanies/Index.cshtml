@model IEnumerable<Campany>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12" style="margin-bottom:1%">
        <h3 class="page-header">إدارة الشركات</h3>
        <a class="btn btn-success" asp-action="Create">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-folder-plus" viewBox="0 0 16 16">
                <path d="m.5 3 .04.87a1.99 1.99 0 0 0-.342 1.311l.637 7A2 2 0 0 0 2.826 14H9v-1H2.826a1 1 0 0 1-.995-.91l-.637-7A1 1 0 0 1 2.19 4h11.62a1 1 0 0 1 .996 1.09L14.54 8h1.005l.256-2.819A2 2 0 0 0 13.81 3H9.828a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 6.172 1H2.5a2 2 0 0 0-2 2zm5.672-1a1 1 0 0 1 .707.293L7.586 3H2.19c-.24 0-.47.042-.683.12L1.5 2.98a1 1 0 0 1 1-.98h3.672z" />
                <path d="M13.5 10a.5.5 0 0 1 .5.5V12h1.5a.5.5 0 1 1 0 1H14v1.5a.5.5 0 1 1-1 0V13h-1.5a.5.5 0 0 1 0-1H13v-1.5a.5.5 0 0 1 .5-.5z" />
            </svg>
        </a>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">

                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th class="text-center">
                                            إسم الشركة
                                        </th>
                                        <th class="text-center">
                                            إسم المسئول
                                        </th>
                                        <th class="text-center">
                                            رقم الهاتف
                                        </th>
                                        <th class="text-center">
                                            عنوان الشركة
                                        </th>
                                        <th class="text-center">
                                            تاريخ التعامل
                                        </th>
                                        <th class="text-center">
                                            ملاحظات
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Campany_Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Campany_Owner)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Campany_Phone)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Campany_Address)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Campany_Date)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Campany_Description)
                                            </td>
                                            <td>
                                                    <a asp-action="Edit" asp-route-id="@item.Campany_Id" style=" color: green !important;font-size: large !important; ">
                                                        <i class="fa fa-edit fa-fw"></i>
                                                    </a> |
                                                    <a asp-action="Details" asp-route-id="@item.Campany_Id" style=" color: blue !important;font-size: large !important; ">
                                                        <i class="fa fa-eye"></i>
                                                    </a> |
                                                    <a asp-action="Delete" asp-route-id="@item.Campany_Id" style="color: red !important; font-size: large !important;">
                                                        <i class="fa fa-remove fa-fw"></i>
                                                    </a>
                                                </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

