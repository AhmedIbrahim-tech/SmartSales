@model Supplier

@{
    ViewData["Title"] = "Edit";
}


<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">تعديل المورد</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                                <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Supplier_ID" />
                            <div class="form-group">
                                <label asp-for="Supplier_Name" class="control-label">إسم المورد</label>
                                <input asp-for="Supplier_Name" required class="form-control" />
                                                <span asp-validation-for="Supplier_Name" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                <label asp-for="Supplier_Phone" class="control-label">رقم الهاتف</label>
                                <input asp-for="Supplier_Phone" required class="form-control" />
                                                <span asp-validation-for="Supplier_Phone" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                <label  asp-for="Company_ID" class="control-label">الشركة</label>
                                <select class="form-control" required asp-items="ViewBag.Company_ID" asp-for="Company_ID">
                                    <option value=""></option>
                                </select>
                               <span asp-validation-for="Company_ID" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="إضافة" class="btn btn-primary" style="font-size:large;" />
                                <a asp-action="Index" value="إدارة الموردين" class="btn btn-success" style="font-size:large;">إدارة الموردين</a>

                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>



@section Scripts {
    @{
    
    await Html.RenderPartialAsync("_ValidationScriptsPartial");

}
}

