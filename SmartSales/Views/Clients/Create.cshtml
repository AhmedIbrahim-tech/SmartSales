@model Client

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">إضافة عميل جديد</h3>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="row">
                                <div class="form-group col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="Client_Name" class="control-label">إسم العميل</label>
                                        <input asp-for="Client_Name" required class="form-control" />
                                        <span asp-validation-for="Client_Name" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="Client_Phone" class="control-label">رقم الهاتف</label>
                                        <input asp-for="Client_Phone" class="form-control" />
                                        <span asp-validation-for="Client_Phone" class="text-danger"></span>

                                    </div>
                                </div>

                            </div>




                            <div class="row">
                                <div class="form-group col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="Client_IDCard" class="control-label">رقم البطاقة</label>
                                        <input asp-for="Client_IDCard" required class="form-control" />
                                        <span asp-validation-for="Client_IDCard" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="form-group col-sm-6">
                                    <div class="form-group">
                                        <label asp-for="Client_Address" class="control-label">عنوان السكن</label>
                                        <input asp-for="Client_Address" required class="form-control" />
                                        <span asp-validation-for="Client_Address" class="text-danger"></span>

                                    </div>
                                </div>


                            </div>
                            <div class="form-group">
                                <label asp-for="Client_Address_Work" class="control-label">عنوان العمل</label>
                                <input asp-for="Client_Address_Work" class="form-control" />
                                <span asp-validation-for="Client_Address_Work" class="text-danger"></span>

                            </div>
                            <div class="form-group">
                                <input type="submit" value="إضافة" class="btn btn-primary" style="font-size:large;" />
                                <a asp-action="Index" value="إدارة العملاء" class="btn btn-success" style="font-size:large;">إدارة العملاء</a>

                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
