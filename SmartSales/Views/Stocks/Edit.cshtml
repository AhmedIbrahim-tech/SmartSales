@model Stock

@{
    ViewData["Title"] = "Edit";
}



<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">تعديل مخزن </h3>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">

            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form asp-action="Edit" style="font-size:large;">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Stock_ID" />
                            <div class="row">
                                <div class="form-group col-sm-6">
                                    <label class="control-label" asp-for="Stock_Name">إسم المخزن</label>
                                    <input class="form-control" asp-for="Stock_Name" required />
                                    <span asp-validation-for="Stock_Name" class="text-danger"></span>

                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="control-label" asp-for="Stock_Address">عنوان المخزن</label>
                                    <input class="form-control" asp-for="Stock_Address" required />
                                    <span asp-validation-for="Stock_Address" class="text-danger"></span>

                                </div>
                            </div>


                            <div class="row">
                                <div class="form-group col-sm-6">
                                    <label class="control-label" asp-for="Stock_Official">مسئول المخزن</label>
                                    <input class="form-control" asp-for="Stock_Official" required />
                                    <span asp-validation-for="Stock_Official" class="text-danger"></span>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label class="control-label" asp-for="Stock_Phone">هاتف المسئول</label>
                                    <input asp-for="Stock_Phone" class="form-control" required />
                                    <span asp-validation-for="Stock_Phone" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="form-group">
                                <label class="control-label" asp-for="Stock_Description">الوصف</label>
                                <textarea class="form-control" asp-for="Stock_Description" style="max-height:100px; resize:block;"></textarea>
                                <span asp-validation-for="Stock_Description" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" style="font-size:medium;" value="تعديل" class="btn btn-primary" />
                                <a href="Stocks/Index" value="إدارة المخازن" class="btn btn-success" style="font-size:medium;">إدارة المخازن</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
